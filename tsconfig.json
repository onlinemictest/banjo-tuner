{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2020"
    ],
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es2015",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
  },
  "include": [
    "vendor/**/*.d.ts",
    "typings/**/*.d.ts",
    "src/**/*.ts",
  ],
}